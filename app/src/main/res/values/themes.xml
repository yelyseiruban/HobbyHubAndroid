<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.HobbyHarbor" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/lightThemeGreenUnderActionBar</item>
        <item name="android:windowBackground">@color/lightThemeLightOrange</item>
        <item name="android:textColor">@color/black</item>

        <item name="materialCalendarTheme">@style/MaterialCalendarTheme</item>
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialogTheme</item>
        <item name="materialTimePickerTheme">@style/MaterialTimePickerTheme</item>
        <item name="materialSearchBarStyle">@style/MaterialSearchBarStyle</item>
        <item name="materialSearchViewStyle">@style/MaterialSearchViewStyle</item>
        <item name="appBarBackgroundColor">@color/lightThemeLightOrange</item>
        <item name="textInputOutlinedStyle">@style/TextInputLayoutStyle</item>
        <item name="android:colorControlActivated">@color/lightThemeAccentOrange</item>
        <item name="android:textColorHighlight">@color/lightThemeAccentOrange</item>

        <item name="progressBarBackground">@color/lightThemeLightOrange</item>
        <item name="progressBarMain">@color/lightThemeAccentOrange</item>


        <item name="userHobbyBackground">@color/lightThemeUserHobbyBackground</item>
        <item name="touchUserHobbyBackground">@color/lightThemeTouchUserHobbyBackground</item>
        <item name="selectedUserHobbyBackground">@color/lightThemeSelectedUserHobbyBackground</item>
        <item name="touchSelectedUserHobbyBackground">
            @color/lightThemeTouchSelectedUserHobbyBackground
        </item>

        <item name="actionBarTextColor">@color/white</item>

        <item name="tryAgainBackground">@color/lightThemeAccentOrange</item>
        <item name="tryAgainText">@color/black</item>

        <item name="addButtonBackground">@color/lightThemeAccentOrange</item>
        <item name="addButtonIcon">@drawable/ic_add</item>
        <item name="removeButtonIcon">@drawable/ic_remove</item>
        <item name="fabColor">@color/black</item>

        <item name="defaultBackground">@drawable/hobby_background</item>
        <item name="selectedBackground">@drawable/hobby_selected_background</item>

        <item name="userActionBackground">@color/lightThemeUserActionBackground</item>
        <item name="touchUserActionBackground">@color/lightThemeTouchUserActionBackground</item>

        <item name="dialogBackgroundColor">@color/lightThemeDialogBackground</item>

        <item name="progressBarColor">@color/lightThemeAccentOrange</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/lightThemeGreenActionBar</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/lightThemeAccentOrange</item>
        <item name="colorSurface">@color/lightThemeLightOrange</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="backgroundTint">@color/lightThemeAccentOrange</item>

        <!---->
        <item name="materialCalendarYearNavigationButton">
            @style/Widget.Material3.MaterialCalendar.YearNavigationButton
        </item>

    </style>

    <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/lightThemeLightOrange</item>
        <item name="colorPrimary">@color/lightThemeAccentOrange</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MaterialTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="android:textColorPrimary">@color/lightThemeAccentOrange</item>
        <item name="colorSurface">@color/lightThemeDialogBackground</item>
        <item name="colorPrimary">@color/lightThemeAccentOrange</item>
    </style>

    <style name="MaterialSearchBarStyle" parent="Widget.Material3.SearchBar">
        <item name="backgroundTint">@color/lightThemeDialogBackground</item>
    </style>

    <style name="MaterialSearchViewStyle" parent="Widget.Material3.SearchView">
        <item name="backgroundTint">@color/lightThemeDialogBackground</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/lightThemeAccentOrange</item>
        <item name="hintTextColor">@color/lightThemeAccentOrange</item>
        <item name="cursorColor">@color/lightThemeFieldGray</item>
        <item name="cursorErrorColor">@color/lightThemeErrorColor</item>
    </style>

    <style name="ExposedDropMenuLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/lightThemeAccentOrange</item>
        <item name="boxBackgroundColor">@color/lightThemeDialogBackground</item>
        <item name="hintTextColor">@color/lightThemeAccentOrange</item>
        <item name="cursorErrorColor">@color/lightThemeAccentOrange</item>
        <item name="endIconTint">@color/lightThemeFieldGray</item>
        <item name="cursorColor">@color/lightThemeErrorColor</item>
    </style>

    <style name="DropDownMenu" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="dropDownBackgroundTint">@color/lightThemeDropDownBackground</item>
    </style>

    <style name="Theme.HobbyHarbor" parent="Base.Theme.HobbyHarbor" />
</resources>